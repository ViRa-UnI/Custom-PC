<odoo>
    <data>
        <!-- PC Builder Main Template -->
        <template id="pc_builder_template" name="PC Builder">
            <div class="pc-builder-container">
                <h2>Customize Your PC</h2>
                <div class="pc-configuration-steps">
                    <t t-foreach="request.env['product.template'].search([('is_pc_component', '=', True)])" t-as="component_category">
                        <div class="component-category">
                            <h3 t-esc="component_category.name"/>
                            <div class="component-selection">
                                <t t-foreach="component_category.component_ids" t-as="component">
                                    <div class="component-item">
                                        <input type="radio" t-att-id="'component_' + str(component.id)" t-att-name="component_category.name" t-att-value="component.id" t-on-change="save_configuration"/>
                                        <label t-att-for="'component_' + str(component.id)">
                                            <span t-esc="component.display_name"/>
                                            <span class="component-price" t-esc="component.price"/>
                                        </label>
                                    </div>
                                </t>
                            </div>
                        </div>
                    </t>
                </div>
                <div id="pc-visualization">
                    <!-- Visualization Placeholder -->
                </div>
                <div class="pc-configuration-summary">
                    <h3>Configuration Summary</h3>
                    <div id="pc_configuration_summary">
                        <!-- Summary Placeholder -->
                    </div>
                    <div class="pc-configuration-price">
                        <span>Total Price: </span>
                        <span id="price-total"></span>
                    </div>
                    <div class="pc-configuration-actions">
                        <button type="button" id="wishlist-button" t-on-click="addToWishlist">Add to Wishlist</button>
                        <button type="button" id="share-button" t-on-click="shareConfiguration">Share</button>
                    </div>
                </div>
            </div>
        </template>
    </data>
</odoo>